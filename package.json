{
  "name": "nuomi-vscode",
  "displayName": "nuomi-vscode",
  "description": "",
  "version": "0.0.1",
  "publisher": "heguang",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/unwrap/nuomi-vscode"
  },
  "keywords": [
    "header",
    "file header",
    "license",
    "file info"
  ],
  "activationEvents": [
    "onCommand:nuomi-vscode.insertFileHeader",
    "onCommand:nuomi-vscode.insertChangeLog",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nuomi-vscode.insertFileHeader",
        "title": "Insert Header Insert"
      },
      {
        "command": "nuomi-vscode.insertChangeLog",
        "title": "Insert Header Change Log"
      }
    ],
    "keybindings": [
      {
        "command": "nuomi-vscode.insertFileHeader",
        "key": "ctrl+alt+H ctrl+alt+H"
      },
      {
        "command": "nuomi-vscode.insertChangeLog",
        "key": "ctrl+alt+C ctrl+alt+C"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "nuomi-vscode",
      "properties": {
        "nuomi-vscode.config": {
          "type": "object",
          "description": "全局的配置信息",
          "properties": {
            "author": {
              "type": "string",
              "description": "显示在文件头的作者名字",
              "scope": "application"
            },
            "autoHeader": {
              "type": "boolean",
              "description": "是否开启自动插入文件头信息",
              "default": true
            },
            "ignore": {
              "type": "array",
              "description": "忽略的文件、目录、特定后缀的文件",
              "default": [],
              "items": {
                "type": "string"
              }
            }
          }
        },
        "nuomi-vscode.variables": {
          "type": "array",
          "description": "An array of key value pairs that define the template variables.",
          "default": [],
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2
          }
        },
        "nuomi-vscode.templates": {
          "type:": "array",
          "description": "An optional set of language templates.",
          "default": [],
          "items": {
            "type": "object",
            "required": [
              "language"
            ],
            "properties": {
              "language": {
                "type": "string",
                "description": "The language that this entry applies to"
              },
              "mapTo": {
                "type": "string",
                "description": "The name of the language to copy settings from.  All other settings are ignored if this one is provided."
              },
              "headerBegin": {
                "type": "string",
                "default": "/*"
              },
              "headerPrefix": {
                "type": "string",
                "default": " *"
              },
              "headerEnd": {
                "type": "string",
                "default": " */"
              },
              "template": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": [
                  "@file {{fileName}}",
                  "@author {{author}}",
                  "@created {{createdDate}}",
                  "@description {{description}}",
                  "-----",
                  "@last-modified: {{lastModifiedDate}}",
                  "@modified by: {{author}}",
                  "-----",
                  "@Copyright (c) {{year}} {{company}}",
                  "-----"
                ]
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "art-template": "^4.13.2",
    "fs": "^0.0.1-security",
    "fullname": "^4.0.1",
    "moment": "^2.29.1"
  }
}